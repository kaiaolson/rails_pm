<ul>
  <% @project.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<%= simple_form_for @project do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.input :files, as: :file, input_html: {multiple: true} %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
