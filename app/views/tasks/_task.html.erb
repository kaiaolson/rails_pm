<li id="<%= dom_id(task) %>" class="list-group-item">
<%= task.title %><br>
Due Date: <%= task.due_date.strftime("%B %d, %Y") %><br>
<%= link_to "Edit", edit_project_task_path(task.project_id, task), remote: true, class: "btn btn-warning" %>
<%= link_to "Delete", project_task_path(task.project_id, task),
                     method: :delete,
                     remote: true,
                     class: "btn btn-danger",
                     data: {confirm: "Are you sure?"}%>
<%= link_to task.status_string, project_task_path(task.project_id, task, change_status: true), method: :patch, remote: true, class: "status btn btn-info"  %>
</li>

