<% if @task.errors %>
<%= @task.errors.full_messages.join(", ") %>
<% end %>
<!-- beginning of task create form -->
<%= simple_form_for [@project, @task] do |f| %>
  <%= f.input :title %>
  <%= f.input :due_date %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<!-- end of task create form -->
