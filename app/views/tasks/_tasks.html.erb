<% if @project.tasks.where(status: false).empty? %>
<% else %>

<h3>Incomplete</h3>
<!-- tasks display not done -->
<table width="100%" id="incomplete_tasks" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.where(status: false).order("created_at DESC").each do |task| %>
      <%= render "/tasks/task", task: task %>
    <% end %>
  </tbody>
</table>
<!-- end of tasks display not done -->

<% end %>

<% if @project.tasks.where(status: true).empty? %>
<% else %>

<h3>Completed</h3>

<!-- tasks display done -->
<table width="100%" id="completed_tasks" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.where(status: true).order("created_at DESC").each do |task| %>
      <%= render "/tasks/task", task: task %>
    <% end %>
  </tbody>
</table>
<!-- end of tasks display done -->

<% end %>
